// views/message.pug
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Volt Vision | Information
    // Add Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet")
    // Add Bootstrap Icons
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css")
    style.
      body {
        background-color: #f8f9fa;
        min-height: 100vh;
        display: flex;
        align-items: center;
      }
      
      .message-container {
        max-width: 450px;
        width: 100%;
        margin: 0 auto;
      }

  body
    .container
      .message-container
        .card.shadow-sm
          .card-body.p-4.text-center
            if title === 'Success'
              i.bi.bi-check-circle-fill.text-success.fs-1.mb-3
            else
              i.bi.bi-exclamation-circle-fill.text-danger.fs-1.mb-3
            h2.card-title.mb-3(class=title === 'Success' ? 'text-success' : 'text-danger')= title
            p.card-text(class=title === 'Success' ? 'text-success' : 'text-danger')= message

    // Add Bootstrap JS and Popper.js
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
